.order
  = form_with model: @order, url: orders_path, method: :post, local: true do |f|
    .order__form
      .order__form__seat
        = f.label :seat, "＜座席＞"
        = f.hidden_field :seat, :value => "#{@order.seat}"
        <br>
        = @order.seat
      .order__form__drink
        = f.label :drink, "＜ドリンク＞⚾️1杯分の値段です⚾️"
        = f.hidden_field :drink, :value => "#{@order.drink}"
        <br>
        = @order.drink
      -# .order__food
      -#   [食べもの]⚾️1人分の値段です⚾️<br>
      -#   = f.collection_check_boxes :food, Food.all, :id, :name, {} do |b|
      -#     = b.label do
      -#       = b.check_box
      -#       = b.object.name
      -#       = b.object.price.to_s(:currency, locale: :ja)
      .order__form__salesperson
        = f.label :salesperson, "＜売り子＞⚾️ご指名されない場合早くお届けできます⚾️"
        = f.hidden_field :salesperson, :value => "#{@order.salesperson}"
        <br>
        = @order.salesperson
        #search-result
      .order__form__submit
        = f.submit '注文する', id: "submit"
      .order__form__back
        = link_to "注文画面に戻る", new_order_path
      .order__form__image
        = link_to root_path, data: {"turbolinks" => false} do
          = image_tag "/assets/uriko.jpeg", alt: "メロンソーダの画像"
