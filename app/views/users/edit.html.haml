#account-page.account-page
  .body__header__top__left.signin
    Hurry App
    .text
      野球×美女<br>
      球場で出会えるキュート
  = image_tag "/images/top4.jpg", alt: "売り子の画像", width: "400px"
  = image_tag "/images/top1.jpg", alt: "売り子の画像", width: "500px"
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      -# %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn', data: {"turbolinks" => false}
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :userid
            = current_user.userid
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .actions
          = f.submit "変更", class: 'btn'