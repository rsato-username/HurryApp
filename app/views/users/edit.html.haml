#account-page.account-page
  = image_tag "/assets/login.jpg", alt: "売り子の画像"
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      -# %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn', data: {"turbolinks" => false}
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :userid
            = current_user.userid
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .actions
          = f.submit "変更", class: 'btn'