#account-page.account-page.ball
  = image_tag "/images/top3.jpg", alt: "売り子の画像"
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h5 ログインページ
      = render "devise/shared/error_messages"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          .field-label
            = f.label :userid, "ユーザーID"
          .field-input
            = f.text_field :userid, autofocus: true
          .field-label
            = f.label :email, "メールアドレス"
          .field-input
            = f.email_field :email, autofocus: true
          .field
            .field-label
              = f.label :password, "パスワード"
              %i (英数字8文字以上)
            .field-input
              = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "ログイン", class: 'btn'
        .home-back
          = link_to "戻る", :back
